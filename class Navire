package batailleNavale;

public class Navire {
	private Coordonnee debut;
	private Coordonnee fin;
	private Coordonnee[] partiesTouchees;
	private int nbTouchees;
	
	
	
	public Navire(Coordonnee debut, int longueur, boolean estVertical) {
		this.debut=debut;
		if (estVertical) { Coordonnee fin= new Coordonnee(debut,(debut.getLigne()+longueur));}
		else{Coordonnee fin= new Coordonnee(debut,(debut.getColonne()+longueur)}
	}
	
	public Coordonnee getDebut() {	return this.debut;}
	public Coordonnee getFin() {	return this.fin;	}
	
	public boolean contient(Coordonnee c) {
		return false;
	}
	public boolean touche(Navire n) {
		return false;
	}
	public boolean chevauche(Navire n) {
		return false;
	}
	public boolean recoitTir(Coordonnee c) {
		return false;
	}
	public boolean estTouche(Coordonnee c) {
		return false;
	}
	public boolean estTouche() {
		return false;
		
	}
	public boolean estCoule() {
		return false;
	}
}
